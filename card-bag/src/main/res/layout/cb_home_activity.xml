<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cb_home_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.HomeActivity">

    <com.wonders.xlab.cardbag.view.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:titleSize="@dimen/top_bar_title_size"
        android:background="@color/top_bar_background"
        app:titleColor="@color/text_black"
        app:menuSize="@dimen/top_bar_menu_size"
        app:titleText="电子会员卡"/>

    <ImageButton
        android:id="@+id/btn_use_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="useCard"
        android:src="@drawable/ic_use_card"
        android:contentDescription="@string/content_desc_use_card"/>

    <ImageButton
        android:id="@+id/btn_manage_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="manageCard"
        android:src="@drawable/ic_manage_card"
        android:contentDescription="@string/content_desc_manage_card"/>

</LinearLayout>
