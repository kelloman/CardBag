<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cb_home_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.CBHomeActivity">

    <com.wonders.xlab.cardbag.view.CBTopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:titleSize="20sp"
        app:rightMenuIcon="@drawable/ic_editor"
        app:leftMenuIcon="@drawable/ic_editor"
        app:titleGravity="left"
        app:titleText="电子会员卡"/>

    <ImageButton
        android:id="@+id/btn_use_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="useCard"
        android:src="@drawable/ic_use_card"
        android:contentDescription="@string/content_desc_use_card"/>

    <ImageButton
        android:id="@+id/btn_manage_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="manageCard"
        android:src="@drawable/ic_manage_card"
        android:contentDescription="@string/content_desc_manage_card"/>

</LinearLayout>
