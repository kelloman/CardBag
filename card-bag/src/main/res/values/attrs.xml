<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TopBar">
        <attr name="titleText" format="string"/>
        <attr name="titleGravity">
            <enum name="left" value="2"/>
            <enum name="center" value="4"/>
        </attr>
        <attr name="titleSize" format="dimension"/>
        <attr name="menuSize" format="dimension"/>
        <attr name="horizontalPadding" format="dimension"/>
        <attr name="titleColor" format="color"/>
        <attr name="rightMenuIcon" format="reference"/>
        <attr name="rightMenuText" format="string"/>
        <attr name="leftMenuIcon" format="reference"/>
        <attr name="leftMenuText" format="string"/>
        <attr name="showDivider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RatioView">
        <attr name="rvVerticalWeight" format="integer" />
        <attr name="rvHorizontalWeight" format="integer" />
        <attr name="rvBaseDirection" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="rvForegroundColor" format="color"/>
        <attr name="rvShowForeground" format="boolean"/>
        <attr name="rvForegroundText" format="string"/>
        <attr name="rvForegroundTextSize" format="dimension"/>
        <attr name="rvForegroundTextColor" format="color"/>
        <attr name="rvForegroundCornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="rivVerticalWeight" format="integer" />
        <attr name="rivHorizontalWeight" format="integer" />
        <attr name="rivBaseDirection" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="rivForegroundColor" format="color"/>
        <attr name="rivShowForeground" format="boolean"/>
        <attr name="rivForegroundText" format="string"/>
        <attr name="rivForegroundTextSize" format="dimension"/>
        <attr name="rivForegroundTextColor" format="color"/>
        <attr name="rivForegroundCornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ForegroundImageView">
        <attr name="fivForegroundColor" format="color"/>
        <attr name="fivShowForeground" format="boolean"/>
        <attr name="fivForegroundText" format="string"/>
        <attr name="fivForegroundTextSize" format="dimension"/>
        <attr name="fivForegroundTextColor" format="color"/>
        <attr name="fivForegroundCornerRadius" format="dimension"/>
    </declare-styleable>
</resources>