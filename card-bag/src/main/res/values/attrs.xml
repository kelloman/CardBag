<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TopBar">
        <attr name="titleText" format="string"/>
        <attr name="titleGravity">
            <enum name="left" value="2"/>
            <enum name="center" value="4"/>
        </attr>
        <attr name="titleSize" format="dimension"/>
        <attr name="menuSize" format="dimension"/>
        <attr name="horizontalPadding" format="dimension"/>
        <attr name="titleColor" format="color"/>
        <attr name="rightMenuIcon" format="reference"/>
        <attr name="rightMenuText" format="string"/>
        <attr name="leftMenuIcon" format="reference"/>
        <attr name="leftMenuText" format="string"/>
        <attr name="showDivider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="vertical_weight" format="integer" />
        <attr name="horizontal_weight" format="integer" />
        <attr name="base" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>