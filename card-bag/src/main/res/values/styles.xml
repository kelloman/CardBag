<resources>

    <!-- Base application theme. -->
    <style name="CBAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CBAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NormalSizeBlackColorTextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/cbTextBlack</item>
    </style>

    <style name="LargeSizeBlackColorTextView">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/cbTextBlack</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/cbTopBarTitleColor</item>
    </style>

    <style name="XToolBarLayout">
        <item name="xtblShowDivider">true</item>
        <item name="xtblTitleColor">@color/cbTopBarTitleColor</item>
        <item name="xtblBackgroundColor">@color/cbTopBarBackground</item>
        <item name="xtblTitleGravity">@integer/cbTopBarGravity</item>
    </style>

    <style name="ImageViewScaleTypeStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
